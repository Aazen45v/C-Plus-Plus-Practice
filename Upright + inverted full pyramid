#include <iostream>
using namespace std;

int main() {
  int n;
  cin>>n;

//code to print full pyramid  
  for(int row=0;row<n;row++){
    for(int i=0;i<n-row-1;i++){
      cout<<" ";
    }
    for(int k=0;k<row+1;k++){
      cout<<"* ";
    }
    cout<<endl;
  }

//code to print inverted full pyramid
  
  for(int row=0;row<n;row++){
    for(int i=0;i<row;i++){
      cout<<" ";
    }
    for(int k=0;k<n-row;k++){
      cout<<"* ";
    }
    cout<<endl;
  }
}


